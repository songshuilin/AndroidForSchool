<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_school_life"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xiaoyuanshenghuo"
    tools:context="com.example.edu.androidforschool.SchoolLifeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="right"
        android:paddingRight="10dp"

        >
        <TextView
            android:id="@+id/xiaoqupingmiantu"
            android:paddingTop="10dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="校区平面图"
            />
        <TextView
            android:id="@+id/xiaoyuanfengjing"
            android:paddingTop="10dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="校园风景"
            />

        <TextView
            android:id="@+id/xinshengzhinan"
            android:paddingTop="10dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新生指南"
            />
        <TextView
            android:id="@+id/back"
            android:paddingTop="10dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            />
    </LinearLayout>


</LinearLayout>
